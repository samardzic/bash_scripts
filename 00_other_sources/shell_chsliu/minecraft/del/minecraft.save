#!/bin/bash

USERNAME=sita
export mcecho -e_off=1 
cron_min='*/5'
cron_hour='*'
cron_day='*'
cron_month='*'
cron_wday='*'


. /home/sita/script/cron/template.sh
. /home/sita/script/minecraft/alias.minecraft


mc_status() {
  ps aux |grep -F -v grep|grep -F -v SCREEN|grep -F --quiet java
  return $?
}

as_user() {
	if [ "$(whoami)" == "$USERNAME" ] ; then
		bash -c "$1"
	else
		su - $USERNAME -c "$1"
	fi
}

mc_command() {
  command="$1";
  if mc_status; then
    [ $mcecho -e_off ] || echo -e "$JARFILE is running... executing command"
    # as_user "screen -p 0 -S minecraft -X eval 'stuff \"$command\"\015'"
    as_user "screen -p 0 -X eval 'stuff \"$command\"\015'"
  fi
}

mc_command save-off
mc_command save-all
mc_command save-on
